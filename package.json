{
  "name": "lint-test",
  "version": "1.1.8",
  "main": "index.js",
  "repository": "git@github.com:CaptainJack-Git/lint-test.git",
  "author": "CaptainJack <captain_jack_mail@163.com>",
  "license": "MIT",
  "scripts": {
    "start": "nodemon --watch app.js --watch src app.js --exec 'npm run pretty'",
    "pretty": "prettier --write app.js src/**/*.js",
    "cz": "git cz",
    "lint": "pretty-quick --staged && lint-staged",
    "release": "standard-version"
  },
  "standard-version": {
    "scripts": {
      "posttag": "git push --follow-tags origin main"
    }
  },
  "lint-staged": {
    "*.css": [
      "stylelint *.css"
    ],
    "*.scss": [
      "stylelint *.scss"
    ],
    "*.js": [
      "eslint *.js"
    ]
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^13.1.0",
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.2.4",
    "commitlint": "^13.1.0",
    "cz-conventional-changelog": "3.3.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^4.0.0",
    "git-cz": "^4.7.6",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "standard-version": "^9.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-prettier": "^1.2.0"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
}
